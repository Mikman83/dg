  .modals__request.request-modal
    .request-modal__close
      span Закрыть
    .request-modal__wrap
      .request-modal__title
        span Отправить заявку
      form.request-modal__form
        fieldset.request-modal__fieldset
          legend.request-modal__legend Ваше имя
          input(type="text" id="name" name="name" autocomplete="off").request-modal__input
        fieldset.request-modal__fieldset
          legend.request-modal__legend!= 'Ваш номер телефона <span>*</span>'
          input(type="tel" id="tel" name="tel" autocomplete="off" required).request-modal__input.request-modal__input-tel
        fieldset.request-modal__fieldset
          legend.request-modal__legend!= 'Название компании <span>*</span>'
          input(type="text" id="company" name="company" autocomplete="off" required).request-modal__input.request-modal__input-company
        button.request-modal__btn.request-modal__btn--disabled.btn(type="submit" data-success='.success-modal')
          span Отправить

