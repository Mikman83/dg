//- Примеси
mixin nav(customClass)
  nav.nav(class=customClass)
    ul.nav__list
      li.nav__item
        a.nav__link(href='./providers.html') Поставщики
      li.nav__item
        a.nav__link(href='./equipment.html') Оборудование
      li.nav__item
        a.nav__link(href='./articles.html') Статьи

mixin location(locationCustomClass)
  .location(class=locationCustomClass)
    span.location__title Ваш город:
    a(href='#').location__value Санкт-Петербург

mixin sort(sortCustomClass)
  .sort(class=sortCustomClass)
    span.sort__title Сортировка:
    a(href='#').sort__value по рейтингу

mixin card(cardCustomClass, ratingStatusClass, statusClass)
  .card(class=cardCustomClass)
    .card__wrap
      .card__header
        .card__title
          span Газовая перспектива
        .card__header-wrap
          .card__rating
            .card__rating-title
              span Рейтинг
            .card__rating-value(class=ratingStatusClass)
              span 7.5
          .card__feedback
            .card__feedback-count
              span 5
            .card__feedback-property
              span отзывов
      .card__inner
        .card__adress
          span Санкт-Петербург, Свеаборгская улица д.12
        .card__delivery
          span Доставка бесплатно в пределах 90 км от КАД, далее от 200 ₽.
        .card__price
          .card__price-status
            .card__price-status-title
              span Цена проверена
            .card__price-status-value(class=statusClass)
              span сегодня
          .card__price-item
            .card__price-wrap
              .card__price-value
                span 29,75
              .card__price-currency
                span ₽/л
            .card__price-conditions
              span Минимальный объем доставки 200 л

        .card__btn
          button.card__order-btn
            span заказать
      .card__details
        a(href='#').card__details-link Подробнее

mixin slide(slideCustomClass, slidedBg)
  .slide(class=slideCustomClass style=slidedBg)
    .slide__inner
      h3 Some title
      p Some lorem ipsum text

mixin breadcrumbs(colorClass, firstPage, lastPage)
  .breadcrumbs(class=colorClass)
    ul.breadcrumbs__list
      li.breadcrumbs__item
        a(href='../index.html' title='Главная')= firstPage
      li.breadcrumbs__item
        span= lastPage


mixin card-mini(cardMiniCustomClass, ratingStatusClass)
  .card-mini(class=cardMiniCustomClass)
    .card-mini__inner
      .card-mini__logo
        img(src='./../img/logo.jpg')
      .card-mini__header
        .card-mini__title
          span Газовая перспектива
        .card-mini__header-wrap
          .card-mini__rating
            .card-mini__rating-title
              span Рейтинг
            .card-mini__rating-value(class=ratingStatusClass)
              span 7.5
          .card-mini__feedback
            .card-mini__feedback-count
              span 5
            .card-mini__feedback-property
              span отзывов
      .card-mini__adress
        .card-mini__adress-item
          span Москва и МО, Санкт-Петербург и ЛО
        .card-mini__advantages
          .card-mini__advantages-gaz
            span.card-mini__gaz-icon
            span Газ
          .card-mini__advantages-diz
            span.card-mini__diz-icon
            span Дизель
